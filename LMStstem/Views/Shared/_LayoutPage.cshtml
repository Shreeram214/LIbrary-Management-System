<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href='@Url.Action("POSHome", "POSHome")'><img src="~/Images/LMSystem.png" class="pos-logo" /></a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link menu-class"> &nbsp;<b> @ViewBag.Customer </b></a>
                </li>
            </ul>
            @if (ViewBag.Title != "SignUp")
            {
                <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown"  href="#">
                            <i class="fa fa-bell Bell"></i>
                            <span class="badge badge-warning navbar-badge SpnBadge" id="messagecount"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-xl dropdown-menu-right">
                            <span class="dropdown-item dropdown-header" id="messagecount1"></span>
                            <div id="messagelist"></div>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" href="#">
                            <i class="fas fa-user-tie" title="Profile" style="font-size: 34px; color: #2e2923; margin-top: -14%"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="min-width: 220px">
                            <a href="@Url.Action("Profile","Account",new {area = ""})" class="dropdown-item">
                                <i class="fas fa-user mr-2"></i> Profile
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("ChangePassword","Account",new {area = ""})" class="dropdown-item">
                                <i class="nav-icon fa fa-lock mr-2"></i> Change Password
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href='@Url.Action("Logout", "Account",new {area = ""})' class="dropdown-item">
                                <i class="fa fa-sign-out mr-2"></i> Signout
                            </a>
                        </div>
                    </li>

                </ul>
            }
        </nav>
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>
</body>
</html>
